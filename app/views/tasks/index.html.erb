<p id="notice"><%= notice %></p>
<% if @count.count == 0 %>
<h2>You have not added new task. Add it now!</h2>
<% else %>
<div class="row">
  <div class="col-md-4">
    <h1 class="text-center">To Do</h1>
    <%= render @to_do %>
  </div>

  <div class="col-md-4">
    <h1 class="text-center">Doing</h1>
    <%= render @doing %>
  </div>

  <div class="col-md-4">
    <h1 class="text-center">Done</h1>
    <%= render @done %>
  </div>
</div>
<% end %>
<br>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-lg" %>
