<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<div class="row">
  <div class="col-md-4">
    <h3>To Do</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Content</th>
          <th>State</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <%= render @to_do %>
      </tbody>
    </table>
  </div>

  <div class="col-md-4">
    <h3>Doing</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Content</th>
          <th>State</th>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
        <%= render @doing %>
      </tbody>
    </table>
  </div>

  <div class="col-md-4">
    <h3>Done</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Content</th>
          <th>State</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <%= render @done %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Task', new_task_path %>
